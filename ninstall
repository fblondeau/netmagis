#!/bin/sh

#
# Installation script
#
# This script ressembles the BSD "install" program, but it
# also substitutes a few patterns (LIBNETMAGIS and CONFFILE)
# while installing the files.
#
# Usage:
#   ninstall opt libnetmagis conffile confprog file ... file dir
#	with opt: [-m mode][-o owner][-g group][-d][-e sed-pattern]
#

mode=0755
owner=
group=
createdir=false
subst=

usage ()
{
    (
	echo "usage: `basename $0` opt libnetmagis conffile file ... file dir"
	echo "	opt: [-m mode][-o owner][-g group][-d][-e sed-pattern]"
	echo "	Warning: no shell special characters in sed-pattern (including space)"
    )
}

args=`getopt "dm:o:g:e:" $*`
if [ $? != 0 ]
then
    usage
    exit 1
fi

set -- $args

while :
do
    case "$1" in
	-d)	createdir=true ; shift ;;
	-e)	subst="$subst -e $2" ; shift 2 ;;
	-o)	owner=$2 ; shift 2 ;;
	-g)	group=$2 ; shift 2 ;;
	-m)	mode=$2 ; shift 2 ;;
	--)	shift ; break ;;
    esac
done

if [ $# -lt 4 ]
then
    usage
    exit 1
fi

libnetmagis=$1
conffile=$2

shift 2

#
# Search for dest directory (last argument) and create it if needed
#

files=""
destdir=""
nfiles=0
while [ $# != 1 ]
do
    files=" $files $1"
    nfiles=`expr $nfiles + 1`
    shift
done
destdir="$1"

#
# Particular case : destdir is a file. In this case, there must
# be at most one file to install.
#

dest="dir"
if [ $createdir = true ]
then
    mkdir -p $destdir
else
    if [ $nfiles = 1 -a ! -d $destdir ]
    then dest="file"
    fi
fi

#
# Process files
#

for f in $files
do
    b=`basename $f`

    if [ $dest = "dir" ]
    then destfile="$destdir/$b"
    else destfile="$destdir"
    fi

    sed \
	    -e "s|%LIBNETMAGIS%|$libnetmagis|g" \
	    -e "s|%CONFFILE%|$conffile|g" \
	    $subst \
	    $f > "$destfile" \
	&& chmod $mode "$destfile" \
	&& if [ ! -z "$owner" ] ; then chown $owner "$destfile" ; fi \
	&& if [ ! -z "$group" ] ; then chgrp $group "$destfile" ; fi
    if [ $? != 0 ]
    then
	echo "abort."
	exit 1
    fi
done

exit 0
